{
  "swagger": "2.0",
  "info": {
    "description": "A suite of service to support applying for an extension on a filing deadline",
    "version": "1.0.0",
    "title": "Companies House extensions API"
  },
  "host": "api.companieshouse.gov.uk",
  "basePath": "/",
  "schemes": [
    "https",
    "http"
  ],
  "tags": [
    {
      "name": "Extension Request"
    },
    {
      "name": "Extension Request Reasons"
    }
  ],
  "paths": {
    "/extensions/requests": {
      "parameters": [
        {
          "in": "body",
          "name": "extension request",
          "schema": {
            "$ref": "#/definitions/CreateExtensionRequest"
          }
        }
      ],
      "post": {
        "tags": [
          "Extension Request"
        ],
        "summary": "create a new extension request resource",
        "produces": [
          "application/json"
        ],
        "responses": {
          "201": {
            "description": "request created",
            "schema": {
              "$ref": "#/definitions/CreateExtensionRequest"
            }
          }
        }
      },
      "get": {
        "tags": [
          "Extension Request"
        ],
        "summary": "get a list of extension requests made against a company",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "a list of extension requests",
            "schema": {
              "$ref": "#/definitions/ExtensionRequestList"
            }
          },
          "404": {
            "description": "no extension requests were found for this company"
          }
        }
      }
    },
    "/extensions/requests/{requestId}": {
      "parameters": [
        {
          "in": "path",
          "name": "requestId",
          "required": true,
          "type": "string"
        }
      ],
      "get": {
        "tags": [
          "Extension Request"
        ],
        "summary": "return a list of extension requests",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "the extension request resource",
            "schema": {
              "$ref": "#/definitions/ExtensionRequestFullResource"
            }
          }
        }
      }
    },
    "/extensions/requests/{requestId}/reasons": {
      "parameters": [
        {
          "in": "path",
          "name": "requestId",
          "required": true,
          "type": "string"
        }
      ],
      "post": {
        "tags": [
          "Extension Request Reasons"
        ],
        "summary": "Add a reason for supporting the extension",
        "produces": [
          "application/json"
        ],
        "responses": {
          "201": {
            "description": "reason added to extension",
            "schema": {
              "$ref": "#/definitions/ExtensionReason"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "ExtensionRequestList": {
      "type": "object",
      "properties": {
        "items": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ExtensionRequest"
          }
        }
      }
    },
    "ExtensionRequest": {
      "type": "object",
      "properties": {
        "request_date": {
          "type": "string",
          "format": "date-time"
        },
        "account_period_start_date": {
          "type": "string",
          "format": "date"
        },
        "accounting_period_end_date": {
          "type": "string",
          "format": "date"
        },
        "links": {
          "$ref": "#/definitions/Links"
        }
      }
    },
    "ExtensionRequestFullResource": {
      "type": "object",
      "properties": {
        "request_date": {
          "type": "string",
          "format": "date-time"
        },
        "account_period_start_date": {
          "type": "string",
          "format": "date"
        },
        "accounting_period_end_date": {
          "type": "string",
          "format": "date"
        },
        "reasons": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ExtensionReason"
          }
        },
        "links": {
          "$ref": "#/definitions/Links"
        }
      }
    },
    "CreateExtensionRequest": {
      "type": "object",
      "properties": {
        "account_period_start_date": {
          "type": "string",
          "format": "date"
        },
        "accounting_period_end_date": {
          "type": "string",
          "format": "date"
        },
        "reasons": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ExtensionReason"
          }
        }
      }
    },
    "ExtensionReason": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "reason": {
          "type": "string"
        },
        "additional_text": {
          "type": "string"
        },
        "date_start": {
          "type": "string",
          "format": "date"
        },
        "date_end": {
          "type": "string",
          "format": "date"
        }
      }
    },
    "CreateExtensionReason": {
      "type": "object",
      "properties": {
        "reason": {
          "type": "string"
        },
        "additional_text": {
          "type": "string"
        },
        "date_start": {
          "type": "string",
          "format": "date"
        },
        "date_end": {
          "type": "string",
          "format": "date"
        }
      }
    },
    "Links": {
      "type": "object",
      "properties": {
        "self": {
          "type": "string",
          "format": "uri"
        }
      }
    }
  }
}
